<odoo>

    <!-- inherit NC form view 
            hide template action from Immediate Action selection -->
    <record id="view_mgmtsystem_nonconformity_form" model="ir.ui.view">
        <field name="name">view.mgmtsystem.nonconformity.department</field>
        <field name="model">mgmtsystem.nonconformity</field>
        <field name="inherit_id" ref="mgmtsystem_nonconformity.view_mgmtsystem_nonconformity_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='immediate_action_id']" position="attributes">
                <attribute name="domain">[('type_action','=','immediate'), ('is_template', '=', False)]</attribute>
            </xpath>
            <xpath expr="//field[@name='action_ids']" position="attributes">
                <attribute name="domain">[('is_template', '=', False)]</attribute>
            </xpath>
        </field>
    </record>

</odoo>
